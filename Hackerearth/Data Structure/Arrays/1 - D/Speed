// Code : 

#include<bits/stdc++.h>
using namespace std;

#define ll long long 

int main(){

    int t; cin >> t;
	while(t--){
		int n; cin >> n;
		int a[n];
		for(int i=0;i<n;i++) cin >> a[i];
		int ans=0;
		int mi=a[0]+1;  
		for(int i=0;i<n;i++){
			if(a[i]<mi){  //comparing speed of the front car
				ans++;
				mi=a[i];
			}
		}
		
		cout << ans << '\n';
	}


	return 0;
}
