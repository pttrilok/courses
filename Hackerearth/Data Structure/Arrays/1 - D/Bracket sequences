// Question Link : https://www.hackerearth.com/practice/data-structures/arrays/1-d/practice-problems/algorithm/bracket-sequence-1-40eab940/
// Code : 

#include<bits/stdc++.h>
using namespace std;

#define ll long long 
int main(){
	string s; cin >> s;
    int n=s.length();
    int ans=0;
    for(int i=0;i<n;i++){
        int c=0; 
        if(s[i]=='('){ // run only when first bracket = (
            for(int j=i;j<i+n;j++){
                if(s[j%n]=='(')
                c++;
                else
                c--;  // for ) bracket
                if(c<0) // when more ) bracket than (
                break;
            }
            if(c==0) // if correct seq then only increasing ans
            ans++;
        }
    }
    cout << ans;
}
