// Ques link - https://www.hackerearth.com/practice/data-structures/arrays/1-d/practice-problems/algorithm/pepper-and-contiguous-even-subarray-9f3adf65/

#include<bits/stdc++.h>
using namespace std;

#define ll long long 

int main(){

    int t; cin >> t;
	while(t--){
		int n; cin >> n;
		int ans=-1,m=-1;
		for(int i=0;i<n;i++){
			int a; cin >> a;
			if(a%2==0){
				m++;
				ans=max(ans,m);
			}else
			m=0;
		}

		cout << ans << '\n';
	}


	return 0;
}
