// Code : 

#include<bits/stdc++.h>
using namespace std;

#define ll long long 

int main(){

    int t; cin >> t;
	while(t--){
		int n,k; cin >> n >> k;
		int mi=1e7;
		for(int i=0;i<n;i++){
			int a; cin >> a;
			mi=min(mi,a);
		}

		cout << (k-mi >0?k-mi:0) << '\n';
	}


	return 0;
}
